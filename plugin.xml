<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android" id="cordova-plugin-admob-mediation-mintegral-jd" version="1.0.0">

    <name>AdMob Mediation Adapter for Mintegral</name>
    <description>AdMob Mediation Adapter for Mintegral</description>
    <author>Jimmt Dickinson</author>
    <keywords>admob,mediation,Mintegral</keywords>
    <license>MIT</license>

    <platform name="android">
        <framework src="com.google.ads.mediation:mintegral:16.8.61.0" />
    </platform>

    <platform name="ios">
        <preference name="GOOGLE_ADS_MEDIATION_MINTEGRAL_VERSION_IOS" default="~> 8.2" />

        <podspec>
            <config>
                <source url="https://cdn.cocoapods.org/"/>
            </config>
            <pods>
                <pod name="GoogleMobileAdsMediationMintegral" spec="$GOOGLE_ADS_MEDIATION_MINTEGRAL_VERSION_IOS" />
            </pods>
        </podspec>
         <!-- Add in the swift-support plugin by default -->
        <!-- <dependency id="cordova-plugin-add-swift-support" /> -->

    </platform>
</plugin>